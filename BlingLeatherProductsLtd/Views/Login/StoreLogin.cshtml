@model StoreLogin
@{
    Layout = null;
 }
<form method="post" asp-action="StoreLogin">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Please Authorize</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row text-center font-weight-bold">
                    <div class="col-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Passwords"></label>
                    </div>


                </div>
                <div class="form-group row text-center">
                    <div class="col-2">
                        <input asp-for="Email" placeholder="Enter Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Passwords" placeholder="Enter Password" class="form-control" />
                        <span asp-validation-for="Passwords" class="text-danger"></span>
                    </div>


                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn-info w-75" value="Login" />
                        </div>
                        <div class="col">
                            <a asp-action="StoreLogin" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

