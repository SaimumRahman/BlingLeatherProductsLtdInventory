@model IEnumerable<ChemicalMaterialsDetails>


@using (Html.BeginForm())
{
    <input type="text" name="CMID" hidden />

}
<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Chemical Materials List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Chemical" asp-action="PostChemicalMaterialDetails" class="btn btn-primary">
                Add Chemical Materials Details
            </a>
        </div>

    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {


        <table class="table table-bordered table-striped" style="width:5%">
            <thead>
                <tr>
                    <th>
                        CMDID
                    </th>
                    <th>
                        CMID
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        ChalanNumber
                    </th>
                    <th>
                        Unit
                    </th>
                    <th>
                        IssuedQuantity
                    </th>
                    <th>
                        BalanceQuantity
                    </th>
                    <th>
                        RequisitionNumber
                    </th>
                    <th>
                        SectionOrDepartment
                    </th>
                    <th>
                        Remarks
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var details in Model)
                {
                    <tr>
                        <td>@details.CMDID</td>
                        <td>@details.CMID</td>
                        <td>@details.Date</td>
                        <td>@details.ChalanNumber</td>
                        <td>@details.Unit</td>
                        <td>@details.IssuedQuantity</td>
                        <td>@details.BalanceQuantity</td>
                        <td>@details.RequisitionNumber</td>
                        <td>@details.SectionOrDepartment</td>
                        <td>@details.Remarks</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Chemical" asp-route-ID="@details.CMDID" asp-action="EditChemicalMaterialsDetails" class="btn btn-outline-primary">EDIT</a>

                            </div>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Data Exists</p>
    }

</div>

