@model IEnumerable<RawMaterialsLocal>


<!DOCTYPE html>
<html>

<head>
    <title>Raw Materials List</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #badceb;
            font-family: sans-serif;
        }

        .heading {
            font-size: 40px;
            text-align: center;
            color: azure;
            margin-bottom: 40px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table thead {
                background-color: gainsboro;
            }

                .table thead tr th {
                    font-size: 14px;
                    font-weight: 600;
                    letter-spacing: .25px;
                    color: midnightblue;
                    opacity: 1;
                    padding: 7px;
                    vertical-align: top;
                    border: 1px solid gainsboro;
                }

            .table tbody tr td {
                font-size: 14px;
                letter-spacing: .25px;
                font-weight: normal;
                color: navy;
                background-color: azure;
                padding: 6px;
                border: 1px solid gainsboro;
            }

                .table tbody tr td .btn-outline-primary {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }

                .table tbody tr td .btn-outline-danger {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }

                .table tbody tr td .btn-outline-secondary {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }
    </style>
</head>
<body>
    <div class="col-6 text-right">
        <a asp-controller="RawMaterialsLocal" asp-action="PostRawMaterialsLocal" class="btn btn-primary">
            Add Raw Materials Local
        </a>
    </div>
    <div>
        <form method="get" asp-action="RawMaterialsListLocal">
            <p>
                <input type="search" placeholder="Enter HS-Code or Name" value="@ViewData["RawMaterialsListLocal"]" name="searches" />
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="RawMaterialsListLocal">Get All Raw Materials Local</a>

            </p>
        </form>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            RML-ID
                        </th>
                        <th>
                            HS-Code
                        </th>
                        <th>
                            BuyerName
                        </th>
                        <th>
                            MaterialName
                        </th>
                        <th>
                            Bin-Number
                        </th>
                        <th>
                            Color-Name
                        </th>
                        <th>
                            Article-Number
                        </th>
                        <th>
                            ChalanNumber
                        </th>
                        <th>
                            Unit
                        </th>
                        <th>
                            Ordered-Quantity
                        </th>
                        <th>
                            Recieved-Quantity
                        </th>
                        <th>
                            Balanced-Quantity
                        </th>
                        <th>
                            Date-Recieved
                        </th>
                        <th>
                            Edit
                        </th>
                        <th>
                            Delete
                        </th>
                        <th>
                            Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rawmaterials in Model)
                    {
                        <tr>
                            <td>@rawmaterials.RMIDL</td>
                            <td>@rawmaterials.HSCode</td>
                            <td>@rawmaterials.BuyerName</td>
                            <td>@rawmaterials.MaterialName</td>
                            <td>@rawmaterials.BinNumber</td>
                            <td>@rawmaterials.ColorName</td>
                            <td>@rawmaterials.ArticleNumber</td>
                            <td>@rawmaterials.ChalanNumber</td>
                            <td>@rawmaterials.Unit</td>
                            <td>@rawmaterials.OrderedQuantity</td>
                            <td>@rawmaterials.RecievedQuantity</td>
                            <td>@rawmaterials.BalancedQuantity</td>
                            <td>@rawmaterials.DateRecieved</td>
                            <td>
                                <a asp-controller="RawmaterialsLocal" asp-route-ID="@rawmaterials.RMIDL" asp-action="EditRawMaterialsLocal" class="btn btn-outline-primary">Edit</a>
                            </td>
                            <td>
                                <a asp-controller="RawmaterialsLocal" asp-route-ID="@rawmaterials.RMIDL" asp-action="Delete" class="btn btn-outline-danger">Delete</a>
                            </td>
                            <td>
                                <a asp-controller="RawmaterialsLocal" asp-route-ID="@rawmaterials.RMIDL" asp-action="RawMaterialsDetailsLocal" class="btn btn-outline-secondary">Details</a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No Data Exists</p>
    }
</body>

</html>