@model IEnumerable<RawMaterialsDetailsLocal>


@using (Html.BeginForm())
{
    <input type="text" name="RMIDL" hidden />

}
<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Raw Materials List Local</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="RawMaterialsLocal" asp-action="PostRawMaterialDetailsLocal" class="btn btn-primary">
                Add Raw Materials Details Local
            </a>
        </div>

    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {


        <table class="table table-bordered table-striped" >
            <thead>
                <tr>
                    <th>
                        RMDIDL
                    </th>
                    <th>
                        RMIDL
                    </th>
                    <th>
                        Date
                    </th>

                    <th>
                        IssuedQuantity
                    </th>
                    <th>
                        BalanceQuantity
                    </th>
                    <th>
                        RequisitionNumber
                    </th>
                    <th>
                        SectionOrDepartment
                    </th>
                    <th>
                        Remarks
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var details in Model)
                {
                    <tr>
                        <td>@details.RMDIDL</td>
                        <td>@details.RMIDL</td>
                        <td>@details.Date</td>

                        <td>@details.IssuedQuantity</td>
                        <td>@details.BalanceQuantity</td>
                        <td>@details.RequisitionNumber</td>
                        <td>@details.SectionOrDepartment</td>
                        <td>@details.Remarks</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @*<a asp-controller="Rawmaterials" asp-route-ID="@details.RMID" asp-action="EditRawMaterials" class="btn btn-outline-primary">EDIT</a>*@

                            </div>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Data Exists</p>
    }

</div>

