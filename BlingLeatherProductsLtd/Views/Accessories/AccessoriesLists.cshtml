@model IEnumerable<Accessories>

<!DOCTYPE html>
<html>

<head>
    <title>Accessories List</title>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #badceb;
            font-family: sans-serif;
        }

        .heading {
            font-size: 40px;
            text-align: center;
            color: azure;
            margin-bottom: 40px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table thead {
                background-color: gainsboro;
            }

                .table thead tr th {
                    font-size: 14px;
                    font-weight: 600;
                    letter-spacing: .25px;
                    color: midnightblue;
                    opacity: 1;
                    padding: 7px;
                    vertical-align: top;
                    border: 1px solid gainsboro;
                    text-align:center;
                }

            .table tbody tr td {
                font-size: 14px;
                letter-spacing: .25px;
                font-weight: normal;
                color: navy;
                background-color: azure;
                padding: 6px;
                border: 1px solid gainsboro;
            }

                .table tbody tr td .btn-outline-primary {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }

                .table tbody tr td .btn-outline-danger {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }

                .table tbody tr td .btn-outline-secondary {
                    width: 80px;
                    text-decoration: none;
                    line-height: 25px;
                    display: inline-block;
                    font-size: small;
                    text-align: center;
                    vertical-align: middle;
                    opacity: 1;
                }
    </style>
</head>
<body>
    <div class="col-6 text-right">
        <a asp-controller="Accessories" asp-action="PostAccessories" class="btn btn-primary">
            Add Accessories
        </a>
    </div>
    <div>
        <form method="get" asp-action="AccessoriesLists">
            <p>
                <input type="search" placeholder="Search" value="@ViewData["Accessories"]" name="searches" />
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="AccessoriesLists">Get All Accessories</a>
            </p>
        </form>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            A-ID
                        </th>
                        <th>
                           A-Name
                        </th>
                        <th>
                           A-Total Quantity
                        </th>
                        <th>
                           A-Unit
                        </th>
                        <th> 
                          Actions
                        </th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var accessories in Model)
                    {
                        <tr>
                            <td>@accessories.AID</td>
                            <td>@accessories.AName</td>
                            <td>@accessories.ATotalQuantity</td>
                            <td>@accessories.AUnit</td>
                           
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Accessories" asp-route-ID="@accessories.AID" asp-action="EditAccessoriesName" class="btn btn-outline-primary">Edit</a>
                                    <a asp-controller="Accessories" asp-route-ID="@accessories.AID" asp-action="Delete" class="btn btn-outline-danger">Delete</a>
                                    <a asp-controller="Accessories" asp-route-ID="@accessories.AID" asp-action="RecievedDetails" class="btn btn-outline-secondary">Recieved</a>
                                    <a asp-controller="Accessories" asp-route-ID="@accessories.AID" asp-action="RequisitionDetails" class="btn btn-outline-secondary">Requisition</a>

                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    }
    else
    {

        <p>No Data Exists</p>
    }
</body>


</html>