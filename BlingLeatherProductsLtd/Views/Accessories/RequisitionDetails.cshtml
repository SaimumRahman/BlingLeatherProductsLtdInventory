@model IEnumerable<RequisitionAccessories>


@using (Html.BeginForm())
{
    <input type="text" name="AID" hidden />

}
<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Requisition Accessories</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Accessories" asp-action="PostRequisition" class="btn btn-primary">
                Add Requisition Accessories
            </a>
        </div>

    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        RAID
                    </th>
                  
                    <th>
                        AID
                    </th>
                    <th>
                        Date
                    </th>

                    <th>
                        IssuedQnty
                    </th>
                    <th>
                        RequisitionNo.
                    </th>
                    <th>
                        Section
                    </th>
                    <th>
                        Remarks
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var details in Model)
                {
                    <tr>
                        <td>@details.RAID</td>
                        
                        <td>@details.AID</td>
                        <td>@details.Date</td>
                        <td>@details.IssuedQnty</td>
                        <td>@details.RequisitionNo</td>
                        <td>@details.Remarks</td>

                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Accessories" asp-route-ID="@details.RAID" asp-action="EditRequistionAcc" class="btn btn-outline-primary">EDIT</a>


                            </div>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Data Exists</p>
    }

</div>

